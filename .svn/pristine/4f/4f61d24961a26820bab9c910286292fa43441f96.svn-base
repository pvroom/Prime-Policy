<ion-header>
	<ion-navbar color="primary">
		<button ion-button icon-only menuToggle>
			<ion-icon name="menu"></ion-icon>
		</button>
		<ion-title>
			Prime Policy Group Fly-in
		</ion-title>
		<ion-buttons end>
	
			<button style="background:transparent!important">
				<ion-avatar>
					<ion-text-avatar class="avatar" color="secondary" style="z-index: 10;" (click)="AvatarNavigation()">{{AttendeeInitials}}
						<ion-icon right name="{{LogInOutIcon}}" color="light" style="z-index: 1000;">
						</ion-icon>
					</ion-text-avatar>
				</ion-avatar>
			</button>

		</ion-buttons>

	</ion-navbar>
</ion-header>

<ion-content class="mutedBlue">

	<!-- Floating button menu -->
    <ion-fab bottom right #fab>
		<button ion-fab color="secondary" ion-fab>
			<ion-icon name="help"></ion-icon>
		</button>
		<ion-fab-list side="top">
			<button ion-fab (click)="TextPrimePolicy(fab)">
				<ion-icon name="chatboxes"></ion-icon>
				<div class="fabdivbutton">Text Prime</div>
			</button>
			<button ion-fab (click)="CallPrimePolicy(fab)">
				<ion-icon name="call"></ion-icon>
				<div class="fabdivbutton">Call Prime</div>
			</button>
			<button ion-fab (click)="AppHelp(fab)">
				<ion-icon name="help"></ion-icon>
				<div class="fabdivbutton">App Help</div>
			</button>
		</ion-fab-list>
    </ion-fab>

	<img src="{{appBanner}}">

	<div *ngIf=UserLoggedIn>
		<div class="row">
			<div class="col">
				<ion-list no-lines>
					<ion-item class="mutedRed" (click)="NavigateToAuthenticatedPage('MyAgenda')" style="width:110%; margin-left:-10px; margin-right:-10px; margin-top:-10px">
						Upcoming Agenda
						<ion-icon name="calendar" item-left></ion-icon>
					</ion-item>
					<ion-item style="border-color: rgba(0, 0, 0, 0);background-color: rgba(0, 0, 0, 0);color: white; padding-bottom:-30px; margin-bottom:-30px;" 
						(click)="EventDetails(upcomingAgenda.visEventID)" 
						*ngFor="let upcomingAgenda of upcomingAgendaItems" 
						id="upcomingAgenda-list-item19" >

						<div>
							<div class="row">
								<div class="col">
									<div style="float: left; padding-right: 10px; padding-bottom: 25px;" *ngIf=!upcomingAgenda.visAvatar>
										<ion-icon name="{{upcomingAgenda.eventTypeIcon}}" style="font-size: 2.0em !important;padding-left:5px; padding-bottom: 20px;margin-right: 5px; padding-right: 5px;"></ion-icon>
									</div>
									<div style="float: left; padding-right: 10px; padding-bottom: 20px;" *ngIf=upcomingAgenda.visAvatar>
										<ion-avatar style="margin-bottom: 20px;">
											<img [src]="upcomingAgenda.ContactAvatar" style="margin-right: 5px; padding-right: 5px;">
										</ion-avatar>
									</div>
									<div>
										<p class="myBold" style="color: white;">
											{{upcomingAgenda.EventName}}
										</p>
										<p style="color: white;">
											{{upcomingAgenda.visEventTimeframe}}
											<br/>
											{{upcomingAgenda.EventLocation}}
										</p>
									</div>
								</div>
							</div>
						</div>
												
					</ion-item>
					<!--
					<ion-item class="mutedRed" style="width:110%;margin-left:-10px; margin-top:10px">
						Next Meeting Contact
						<ion-icon name="contact" item-left></ion-icon>
					</ion-item>
					<ion-item style="border-color: rgba(0, 0, 0, 0);background-color: rgba(0, 0, 0, 0);color: white; margin-left:-10px" 
						(click)="CongressionalDetails(upcomingContact.cmID)" 
						*ngFor="let upcomingContact of upcomingContacts" 
						id="upcomingContact-list-item19" >
						<div>
							<div class="row">
								<div class="col">
									<div style="float: left; padding-right: 10px;">
										<ion-avatar item-start>
											<img  [src]="upcomingContact.ContactAvatar" src="assets/img/personIcon.png" onerror="this.src='assets/img/personIcon.png'">
										</ion-avatar>
									</div>
									<div>
										<p style="color: white;font-weight:bold">
											{{upcomingContact.visContactName}}
										</p>
										<p style="color: white;">
											{{upcomingContact.visAffiliation}}
										</p>
									</div>
									<div style="float: right; color: white;">
										<ion-icon name="{{upcomingContact.navigationArrow}}"></ion-icon>
									</div>
								</div>
							</div>
						</div>
					</ion-item>
					-->
				</ion-list>
			</div>
		</div>
	</div>
	<div *ngIf=!UserLoggedIn>
				<ion-item no-lines style="border-color: rgba(0, 0, 0, 0);background-color: rgba(0, 0, 0, 0);color: white; padding-bottom:-30px; margin-bottom:-30px;" 
					id="NotLoggedIn-list-item19" >
					<div>
						<div class="row">
							<div class="col">
								<div>
									<p style="color: white;">
										In order to utilize this app, you need:<br/>
									</p>
										<ul>
											<li>An email address provided to Prime Policy Group</li>
											<li>A password provided by Prime Policy Group</li>
											<li>Be registered for a fly-in event</li>
										</ul>
									<p style="color: white;">
										You can log in using the button in the upper right.
									</p>
								</div>
							</div>
						</div>
					</div>
				</ion-item>
	</div>
	
</ion-content>
