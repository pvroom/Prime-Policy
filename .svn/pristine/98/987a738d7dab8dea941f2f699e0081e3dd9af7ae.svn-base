<ion-header>

  <ion-navbar color="primary">
    <button ion-button menuToggle>
      <ion-icon name="menu"></ion-icon>
    </button>
    <ion-title>Congressional Member Details</ion-title>
  </ion-navbar>

</ion-header>


<ion-content>

	<ion-grid>
		<ion-row>
			<ion-col col-4>
				<img [src]="visualImageURL" onerror="this.src='assets/img/personIcon.png'"
					style="float:left; width:70%" src="assets/img/personIcon.png" alt="Image error">
			</ion-col>
	
			<ion-col col-8 class="myLabelBold" style="padding-left:0">
					<h2>{{visualDisplayName}}</h2>
					<h5>{{visualChamber}}<br/>
					{{visualParty}}<br/>
					{{visualState}}<br/>
					{{visualDistrict}}</h5>
			</ion-col>
		</ion-row>
	</ion-grid>

	<ion-card>
		<ion-card-header class="cardHeader" >
			Biography
		</ion-card-header>
		<ion-card-content [innerHTML]="BioDetails" style="margin-top:5px">
			{{visualBiography}}
		</ion-card-content>
	</ion-card>

	<ion-card *ngIf="WebsiteShow">
		<ion-card-header class="cardHeader">
			<p style="color:#fff">
				Website
			</p>
		</ion-card-header>

		<ion-card-content style="margin-top:5px">
			<div class="list" (click)="navToWebsite(visWebsite)">
				{{visWebsite}}
			</div>
		</ion-card-content>
	</ion-card>

	<ion-card>
		<ion-card-header class="cardHeader">
				Committees
		</ion-card-header>
		<ion-card-content>
			<ion-list id="committees-list3" style="margin-top:5px">
				<ion-item class="item-icon-left item-icon-right" *ngFor="let committee of CommitteeListing" id="committees-list-item19">
					<ion-icon item-left name="chatboxes"></ion-icon>
					<h2 text-wrap> {{committee.DisplayCommitteeName}}</h2>
				</ion-item>
			</ion-list>
		</ion-card-content>
	</ion-card>

</ion-content>
